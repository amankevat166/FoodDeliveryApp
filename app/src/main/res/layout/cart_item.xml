<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:elevation="7dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.006">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/dar_bhat"
                android:background="@drawable/rectangle_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Dar-Bhat"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_img"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_rs"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:text="Rs."
                android:textColor="@color/orange"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_img"
                app:layout_constraintTop_toBottomOf="@+id/item_name" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:text="1200"
                android:textColor="@color/orange"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_rs"
                app:layout_constraintTop_toTopOf="@+id/item_name" />

            <TextView
                android:id="@+id/item_qty"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:text="10"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintStart_toEndOf="@+id/plus_btn"
                app:layout_constraintTop_toBottomOf="@+id/desc" />

            <ImageButton
                android:id="@+id/plus_btn"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="168dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/circular_shape"
                android:src="@drawable/plus_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/desc" />

            <ImageButton
                android:id="@+id/minus_btn"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/circular_shape"
                android:src="@drawable/minus_icon"
                app:layout_constraintStart_toEndOf="@+id/item_qty"
                app:layout_constraintTop_toBottomOf="@+id/desc" />

            <TextView
                android:id="@+id/soldby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Sold by:"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/item_img"
                app:layout_constraintTop_toBottomOf="@+id/item_rs" />

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:paddingStart="5dp"
                android:text="Legend paji"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/soldby"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:text="Our Dal Rice is a symphony of flavors, with the wholesome goodness of protein-rich "
                android:textColor="@color/grey"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/item_img"
                app:layout_constraintTop_toBottomOf="@+id/item_rs" />

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circular_shape"
                android:src="@drawable/dustbin_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.112"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_img" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>